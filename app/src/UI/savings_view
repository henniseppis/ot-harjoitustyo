import tkinter
from tkinter import Tk, ttk
from tkinter import messagebox
from text_interface import Functionality

class savings_view:
    def main_screen():
        window = Tk()
        window.title("Targets")
        window.geometry("450x450")
        window.configure(bg= "lightgrey")

        frame = tkinter.Frame(bg = "lightgrey")
            

        #tekstit
        register_label= tkinter.Label(frame, text=" You are saving for these atm ", bg = "lightgrey", font = ("Calibri", 30))
        targets  = tkinter.Entry(frame, text = "" font = ("Calibri", 15))

        #näytöllä

        register_label.grid(row=0,  column=1, columnspan = 2, sticky="news", pady=40)
        targets.grid(row=1, column=0)

        frame.pack()


        window.mainloop() 

    main_screen()